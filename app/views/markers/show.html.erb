<% if session[:user_id] == @marker.user_id %>
<a class="btn btn-mini btn btn-warning" href="/markers/<%=@marker.id%>/edit">Edit marker</a><br><br>
<form action="/markers/<%=@marker.id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input class="btn btn-mini btn btn-danger" type="submit" value="Delete Marker"><br>
</form> 
<% end %>
